<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtOca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OCA BURGUER"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/oca_burguer" />

    <TextView
        android:id="@+id/txtOcaDisc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pioneiros no segmento de “smash”, nossos burgers são especiais!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/oca2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/oca1" />

    </LinearLayout>

    <Button
        android:id="@+id/btnOcaMap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#040404"
    android:text="Mapa" />

    <Button
        android:id="@+id/btnOcaSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#070707"
        android:text=" Site" />

    <Button
        android:id="@+id/btnOcaTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#090909"
        android:text="Telefone" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#000000"
        android:text="Sair"
        android:textAlignment="center" />
</LinearLayout>
